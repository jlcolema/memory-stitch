<script>
  function checkVariantId() {
    if (typeof window.prevVariantId === 'undefined') {
      window.prevVariantId = null;
    }

    const url = new URL(window.location.href);
    const variantId = url.searchParams.get('variant');


    if (variantId !== window.prevVariantId) {
      const variants = [
        {% for variant in product.variants %}
        {
          id: "{{ variant.id }}",
          regularPriceString: "{{ variant.compare_at_price | money | default: '' }}",
          salePriceString: "{{ variant.price | money }}"
        }
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
      ];

      let regularPriceString = "";
      let salePriceString = "";

      variants.forEach(variant => {
        if (variant.id === variantId) {
          regularPriceString = variant.regularPriceString ? variant.regularPriceString : variant.salePriceString;
          salePriceString = variant.salePriceString;
        }
      });

      window.regularPrice = parseFloat(regularPriceString.trim().replace('$', ''));
      window.salePrice = parseFloat(salePriceString.trim().replace('$', ''));
      window.priceDifference = Math.abs(window.regularPrice - window.salePrice).toFixed(2);

      window.prevVariantId = variantId;
    }
  }

  function priceUpdater() {
    if (!window.regularPrice) return;

    let lastContainer = document.querySelectorAll('.custom-check-container')[document.querySelectorAll('.custom-check-container').length - 1];

    if (document.querySelector('.custom-quilt-component.edit-mode')) {
      let elements = document.getElementsByClassName('component custom-quilt-component');

      for (let i = 0; i < elements.length; i++) {
        if (elements[i].style.display === 'block') {
          lastContainer = elements[i];
          break;
        }
      }
    }

    const checkedInputs = lastContainer.querySelectorAll('input[type="checkbox"]:checked');

    let sum = 0;
    checkedInputs.forEach(input => {
      sum += parseFloat(input.value);
    });

    const regularPriceElements = document.querySelectorAll('.price-item.price-item--regular');
    const salePriceElements = document.querySelectorAll('.price-item.price-item--sale');

    if (window.regularPrice === window.salePrice) {
      window.toggleRegular = true;
      regularPriceElements.forEach(el => {
        el.textContent = '$' + (window.regularPrice + sum).toFixed(2);
      });
    } else {
      window.toggleRegular = false;
      regularPriceElements.forEach(el => {
        el.textContent = '$' + (window.regularPrice + sum).toFixed(2);
      });

      salePriceElements.forEach(el => {
        el.textContent = '$' + (window.salePrice + sum).toFixed(2);
      });
    }
  }

  function setParams() {
    let url = new URL(window.location.href);
    let urlParams = new URLSearchParams(url.search);

    const paramNames = ['utm_source', 'utm_medium', 'utm_campaign'];

    paramNames.forEach(name => {
      if (urlParams.has(name) && window[name + '_param'] !== urlParams.get(name)) {
        window[name + '_param'] = urlParams.get(name);
      }
    });
  }

  setInterval(() => {
    priceUpdater();
    checkVariantId();
    setParams();
  }, 10);
</script>
