                      {% for option in product.options_with_values %}
                        <div id="selector-wrapper-{{ forloop.index0 }}"
                             class="selector-wrapper js product-form__item">
                          <label {% if option.name == 'default' %} class="label--hidden" {% endif %}
                            for="SingleOptionSelector-{{ forloop.index0 }}">
                            {{ option.name }}
                          </label>
