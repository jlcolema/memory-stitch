<section class="hone_sec_two how_to_prep">
  <div class="container">
    <div class="how_work">
      <h2 class="fs4 center">{{ section.settings.how_work_tag }}</h2>
      <strong class="fs3 center">{{ section.settings.how_work_title }}</strong>

      <div class="row">
        {% for block in section.blocks %}
        {% if block.type == 'how_Work' %}
        <div class='col-lg-4 col-sm-4 col-md-4 col-xs-12'>
          <div class="your_story">
            <div class="ypur_story_img faqpage_img">
              {{ block.settings.how_work_img | image_url: width: 1024 | image_tag: widths: '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048', loading: 'lazy' }}
            </div>
            <h4>{{ block.settings.how_work_title }}  </h4>
            <p>{{ block.settings.how_work_tag }}</p>
            <a href="{{ block.settings.how_work_link }}" class="btn">{{ block.settings.how_work_btn }}	</a>
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<section class="home_sec_three css-grid items-stretch">
  <div class="free_space hidden-xs">
    <div class="testimonial_img h-100">
      {{ section.settings.testimonial_img | image_url: width: 1024 | image_tag: widths: '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048', loading: 'lazy', style: 'object-fit: cover;height: 100%;' }}
    </div>
  </div>
  <div class="free_space">
    <div class="testimonial_content" style="background-color:{{ section.settings.testimonial_color }}  ">
      <div class="testimonial_content_inner testimonial_content_inner_our_story pa4">
        <h4 >{{ section.settings.testimonial_title }}</h4>
        <p>{{ section.settings.testimonial_tag }}</p>
      </div>
    </div>
  </div>
  <div class="free_space visible-xs">
    <div class="testimonial_img h-100">
      <img loading="lazy" src="{{ section.settings.testimonial_img | img_url: 'master' }}" style="object-fit: cover;height: 100%;" />
    </div>
  </div>
  <div class="free_space">
    <div class="testimonial_content" style="background-color: {{ section.settings.testimonial_color_two }}">
      <div class="testimonial_content_inner testimonial_content_inner_font testimonial_content_inner_our_story pa4">
        <h4 style="color:#26b0c7;">{{ section.settings.testimonial_title_two }}</h4>
        <p>{{ section.settings.testimonial_tag_two }}</p>
      </div>
    </div>
  </div>
  <div class="free_space">
    <div class="testimonial_img h-100">
      {{ section.settings.testimonial_img_two | image_url: width: 1024 | image_tag: widths: '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048', loading: 'lazy', alt: 'Testimonial Image', style: 'object-fit: cover;height: 100%;' }}
    </div>
  </div>
</section>
<div class="clearfix"></div>
<section class="ourstore_sec_three">
  <div class="we_are we_are_our_story">
    <div class="we_are_our_story_content">
      <h5>{{ section.settings.located_tag }}</h5>
      <p>{{ section.settings.located_content }} </p>
    </div>
  </div>
</section>
<section class="home_sec_five overflow-hidden">
  <div class="rellax" data-rellax-speed="-3" data-rellax-percentage="0.5">
    {{ section.settings.our_sec_img | image_url: width: 1024 | image_tag: widths: '180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048', loading: 'lazy' }}
  </div>
</section>

<section class="home_sec_eight">
  <div class="faq_main">
    <h4>{{ section.settings.title }}</h4>
    {% assign s = 1 %}
    {% for block in section.blocks %}
    {% if block.type == 'repeat' %}
    <div class="faqs">
      <div class="faq_heading" onclick="showds({{ s }})" id="q{{ s }}">
        <h3>{{ block.settings.question }} <span><i class="fas fa-angle-down"></i></span></h3>
        <div class="faq_content" id="tab{{ s }}" style="display: none;">
          <p> {{ block.settings.ans }}</p>
        </div>
      </div>
    </div>
    {% endif %}
    {% assign s = s | plus: 1 %}
    {% endfor %}
    <h5 class="mt5">{{ section.settings.faqtag }}</h5>
  </div>
</section>

<div class="clearfix"></div>

