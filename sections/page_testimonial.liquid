<section class="testimonial_sec_one ">
  <div class="faq_main faq_main_product faq_main_testimonial ">
    <h4> {{ section.settings.testimonial_title_main }}</h4>
    <h6>{{ section.settings.testmionial_tag_main }}</h6>
    <div class="dg">
      {% for block in section.blocks %}
      {% if block.type == 'testmoni_user' %}
        <div class="testmonial_main">
          <div class="center cover br-100 w5 h5" style="background:url('{{ block.settings.testmonial_img | img_url: 'master' }}') center;"></div>
          <h4>{{ block.settings.btn }}</h4>
          <h5>{{ block.settings.tag }}</h5>
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="ourstore_sec_three">
  <div class="testimonial_slider_valur">
    <div class="our_values_slider testtimonial_slider_main">
      {% for block in section.blocks %}
      {% if block.type == 'testimonial_slider' %}
      <div class="testtimonial_slider_mai">
        <div class="col-lg-4 col-ms-4 col-sm-4 col-xs-12">
          <div class="testimonial_slider_img" style="background-image:url({{ block.settings.testimonial_img | img_url: 'master' }})" >
          </div>
        </div>
        <div class="col-lg-8 col-ms-8 col-sm-8 col-xs-12">
          <div class="testimonial_slider_content">
            <h4>{{ block.settings.testimonial_title }}</h4>
            <h5>{{ block.settings.testimonial_tag }}</h5>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="testimonial_slider">
  <div class="customer_review">
    <h4>{{ section.settings.review }}</h4>
    {% for product in collections['all'].products %}
    {% if product.metafields.spr.reviews %}
    <div class="revrep">
      <a href="{{ product.url | within: collection }}" title="{{ product.title | escape }}">
        <h4><span class="title">{{ product.title }}</span></h4>
      </a>
      <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
    </div>
    {% endif %}

    {% endfor %}
    <div class="clearfix"></div>
    <br/>
    <a href="{{ section.settings.link_review }}" class="btn">{{ section.settings.review_btn }} </a>
  </div>
</section>

<section class="home_sec_nine">
    <div class="happy_customers_main">
        <h4 class="tc">{{ section.settings.happy_title }}</h4><br />
        <div id="insta-feed"></div>
        <h5>{{ section.settings.happy_tag }}</h5>
        <a href="{{ section.settings.happy_link }}" class="btn">{{ section.settings.happy_btn }}</a>
    </div>
</section>


